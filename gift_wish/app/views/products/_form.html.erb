<div class="sign_up panel panel-default col-md-8 col-md-offset-2">
<div class="add_product panel-heading">
<h1> Add Product </h1>
</div>
<div class="panel-body">
<%= form_for(@product, html: {class: "form-inline"}) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group field">
    <%= f.label :title %><br>
    <%= f.text_field :title, :class=>"form-control" %>
  </div>
  <div class="form-group field">
    <%= f.label :photo %> URL<br>
    <%= f.text_area :photo, :class=>"form-control"  %>
  </div>
  <div class="form-group field">
    <%= f.label :product_url %><br>
    <%= f.text_area :product_url, :class=>"form-control"  %>
  </div>
  <div class="form-group field">
    <%= f.label :price %><br>
    <%= f.text_field :price, :class=>"form-control"  %>
  </div>
  <div class="form-group field">
    <%= f.label :category_id %><br>
    <%= f.collection_select(:category_id, Category.all, :id, :category, :class=>"form-control" ) %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
